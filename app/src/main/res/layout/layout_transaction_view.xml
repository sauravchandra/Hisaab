<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="saurav.chandra.hisaab.activity_transaction_view">

    <TextView
        android:id="@+id/transaction_details"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/transaction_time"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/transaction_participants_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/transaction_participants"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/transaction_paid_by_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid by"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/transaction_paid_by"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"/>
</LinearLayout>
